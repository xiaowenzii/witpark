page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 6 0rpx;
}

.index{
    height: 40%;
    width: 100%;
}

.index-image{
  height: 100%;
  width: 100%;
}

.title{
  text-align: center;
  margin-top: -60%;
  color: #FFFFFF;
  font-size: 48rpx;
  letter-spacing: 18rpx;
}

.login{
  border: #FFFFFF;
  background-color: #FFFFFF;
  height: 480rpx;
  width: 90%;
  margin-top: -20%;
  margin-left: 5%;
}

.account{
  width: 80% !important;
  height: 96rpx;
  margin: 72rpx auto 36rpx auto;
  border: 1rpx solid #EFEFEF;
  border-radius: 6rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
}

.password{
  width: 80% !important;
  height: 96rpx;
  margin: 36rpx auto;
  border: 1rpx solid #EFEFEF;
  border-radius: 6rpx;
  display: flex;
}

.checkcode-view{
  width: 80% !important;
  height: 96rpx;
  margin: 36rpx auto 36rpx auto;
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
}
.checkcode{
  width: 50%;
  height: 96rpx;
  border: 1rpx solid #EFEFEF;
  display: flex;
}

.checkcode-image{
  height: 96rpx;
  width: 40%;
  display: flex;
  position: absolute;
  right: 0;
}

.login-image{
  height: 48rpx;
  width: 48rpx;
  margin: 24rpx 12rpx;
}

input{
  height: 48rpx;
  margin: 24rpx 12rpx;
  box-sizing:border-box;
}

.login-button{
  margin-top: 96rpx;
  height: 96rpx;
  width: 80% !important;
  line-height: 96rpx;
  border-radius: 12rpx;
  font-size: 34rpx;
  padding: 0;
  color: #FFFFFF;
}