page{
  height: 100%;
  width: 100%;
  background: -webkit-linear-gradient(top, #E8F7F4,#F7F7F7);
}

/* 设备列表 */
.scroll-view{
  height: 48rpx;
  margin: 12rpx 24rpx;
  display: flex;
  white-space:nowrap;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.scroll-view-item{
  font-size: 27rpx;
  text-align: center;
  padding: 6rpx 18rpx 9rpx 18rpx;
  display: inline-block;
  box-sizing: border-box;
  border-radius: 12rpx;
}

.view-title{
  width: 100%;
  margin-top: 18rpx;
  display: flex;
  position: relative;
  flex-direction: row;
}
.view-text-1{
  font-size: 26rpx;
  padding-left: 26rpx;
  padding-top: 12rpx;
  font-weight: bolder;
}
.view-text-2{
  font-size: 24rpx;
  display: flex;
  position: absolute;
  right: 0;
  padding-top: 12rpx;
  padding-right: 24rpx;
}

.device-content{
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-align: center;
}
.content{
  height: 120px;
  width: 49%;
  margin: 12rpx 0;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.device-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
}
.device-item-image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 12rpx;
}
.device-item-switch{
  zoom: 0.6;
  display: flex;
  position: absolute;
  right: 0;
  margin-right: 36rpx;
}
.device-item-text1{
  margin-top: 12rpx;
  font-size: 24rpx;
  left: 0rpx;
  display: flex;
  align-items: flex-start;
  margin-left: 12rpx;
}
.device-item-text2{
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #BEBEBE;
  display: flex;
  align-items: flex-start;
  margin-left: 12rpx;
}

/* Dialog 样式 */
.condtion-dialog{
  width: 100%;
  background-color: #00000020;
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
}
.condtion-view {
  width: 100%;
  padding: 24rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.condtion-view-desc {
  width: 20%;
  height: 42rpx;
  display: flex;
  align-items: center;
  margin: 12rpx 0;
}

.condtion-view-item-area{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 60%;
  border: 1rpx solid gray;
  height: 48rpx;
  align-items: center;
  padding-left: 18rpx;
  border-radius: 9rpx;
  position: relative;
}
.arrow-image{
  width: 32rpx;
  height: 24rpx;
  margin-top: 3rpx;
  margin-left: 18rpx;
  display: flex;
  position: absolute;
  right: 0;
  margin-right: 12rpx;
}
.u-class{
  width: 45%;
  font-size: 24rpx;
  margin: 6rpx 12rpx;
  display: flex;
  left: 0;
}

.i-class{
  font-size: 24rpx;
  margin: 6rpx 12rpx
}

.u-class-text{
  font-weight: bolder;
  margin-right: 9rpx;
}