.quota{
  height: 100%;
  width: 100%;
}

.search-condtion{
  width: 100%;
  height: 42rpx;
  background-color: ghostwhite;
  display: flex;
  align-items: center;
}

.search-condtion-text{
  font-size: 24rpx;
  margin-left: 18rpx;
  font-weight: bold;
  background-color: ghostwhite;
}
.condtion-text{
  color: darkcyan;
  margin-left: 6rpx;
  margin-right: 9rpx;
}
/* 列表样式 */
.view-item{
  width: 98%;
  height: 276rpx;
  margin-left: 1%;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.quota-circle-point{
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-top: 10rpx;
}

.quota-button{
  width: 64rpx;
  height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  padding-top: 3rpx;
  border-radius: 6rpx;
  color: #FFFFFF;
}

/* Dialog 样式 */
.condtion-dialog{
  height: 100%;
  width: 100%;
  background-color: #00000020;
  position: absolute;
  z-index: 10;
  top: 0;
  left: 0;
}