page{
  height: 100%;
  width: 100%;
  background: -webkit-linear-gradient(top, #E8F7F4,#F3F4F4);
}

/* 设备数据 */
.list-view{
  height: 360rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-align: center;
}

.list-view-item{
  width: 25%;
  height: 168rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.item-image{
  height: 64rpx;
  width: 64rpx;
}
.item-text{
  font-size: 24rpx;
}
.item-val{
  font-size: 26rpx;
  margin-top: 6rpx;
  font-weight: bolder;
}

/* 用电发电 */
.energy-content{
  height: 720rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: 36rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-align: center;
}

.content{
  height: 100px;
  width: 48%;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.content-line{
  height: 1rpx;
  width: 90%;
  margin-left: 5%;
  margin-top: 12rpx;
  background-color: #F8F8F8;
}

.content-val{
  display: flex;
  font-size: 32rpx;
  margin-left: 24rpx;
  margin-top: 12rpx;
  font-weight: bolder;
}

.content-desc{
  display: flex;
  font-size: 24rpx;
  margin-left: 24rpx;
  margin-top: 6rpx;
}

/* 实时功率 */
.power-view{
  height: 480rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  flex-direction:column;
}

.view-title{
  width: 100%;
  display: flex;
  margin-top: 12rpx;
  position: relative;
  flex-direction: row;
}
.view-text-1{
  font-size: 26rpx;
  padding-left: 24rpx;
  padding-top: 12rpx;
  font-weight: bolder;
}
.view-text-2{
  font-size: 24rpx;
  display: flex;
  position: absolute;
  right: 0;
  padding-top: 12rpx;
  padding-right: 24rpx;
}

.view-chart-select{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 18rpx;
}

.view-chart-text{
  font-size: 24rpx;
  margin: 6rpx 24rpx;
}
.chart{
  width: 100%;
  height: 380rpx;
}