page{
  height: 100%;
  width: 100%;
  background-color: #F3FCFB;
}

.header{
  width: 100%;
  height: 520rpx;
  background: -webkit-linear-gradient(top, #BBE2F2,#F3FCFB);
}

.header-image-view{
  height: 90rpx;
  width: 90rpx;
  position: absolute;
  right: 0;
  margin-right: 32rpx;
}

.header-image{
  height: 100%;
  width: 100%;
  border-radius: 50%;
}

/* 天气 */
.weather-view{
  height: 240rpx;
  width: 100%;
  margin-top: -12rpx;
  background-color: #FFFFFF;
  border-radius: 18rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.weather-view-content{
  width: 46%;
  height: 120rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  padding-left: 4%;
}

.weather-view-image{
  height: 74rpx;
  width: 74rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 园区收益 */
.earning-view{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
}

.earning-view-item{
  width: 35%;
  height: 100%;
  border-radius: 12rpx;
  background-color: #FFFFFF;
}

.earning-view-item image{
  width:64rpx;
  height:64rpx;
  margin: 12rpx 0rpx 0rpx 12rpx;
}
.view-item-text-1{
  font-size: 24rpx;
  padding-left: 24rpx;
}
.view-item-text-2{
  font-weight: bolder;
  bottom: 0;
  padding-left:24rpx;
  padding-top: 6rpx;
  color: #1CB7A3;
  font-size: 26rpx;
}
.view-item-text-3{
  font-size: 24rpx;
  font-weight: bolder;
  bottom: 0;
  padding-top: 6rpx;
  margin-top: 12rpx;
  color: #1CB7A3;
  font-size: 26rpx;
}

/* 数据总览 */
.data-overview{
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: 12px;
  padding-bottom: 12rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  background-color: #FFFFFF;
  flex-wrap: wrap;
}

.overview-capacity{
  height: 240rpx;
  width: 46%;
  margin-left: 2%;
  margin-top: 12rpx;
  background-color: #EEF8F6;
  border-radius: 12rpx;
}

.overview-power-consume{
  height: 48%;
  width: 100%;
  background-color: #FFFDF8;
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.overview-power-create{
  height: 48%;
  width: 100%;
  margin-top: 4%;
  background-color: #F6F7FB;
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.power-image-view{
  width: 30%;
  align-items: center;
  display: flex;
  position: relative;
}
.power-image{
  height: 64rpx;
  width: 64rpx;
  right: 0;
  margin-right: 24rpx;
  position: absolute;
}

.date-select-view{
  height: 64rpx;
  padding: 12rpx 24rpx;
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
}

.date-view{
  font-size: 24rpx;
  padding: 6rpx 18rpx;
  border-radius: 12rpx;
  font-weight: bolder;
}

/* 图形 */
.select_box{
  width:140rpx;
  height:100%;
  margin-left: 18rpx;
}
.select_box .select{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}
.select_box .select .select_text{
  font-size: 26rpx;
  line-height: 28rpx;
  flex: 1;
}

.select_box .option_box{
  position: absolute;
  width: 110rpx;
  box-sizing: border-box;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  text-align: center;
  border-left:1px solid #efefef;
  border-right:1px solid #efefef;
  z-index: 10;
}
.select_box .option_box .option{
  display: block;
  font-size: 24rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 12rpx;
  color: #777;
}

.energy-power-rank{
  height: 24rpx;
  width: 24rpx;
  margin-top: 6rpx;
  font-size: 16rpx;
  text-align: center;
  color: #FFFFFF;
  font-weight: bolder;
}