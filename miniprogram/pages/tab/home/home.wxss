page{
  height: 100%;
  width: 100%;
  background-color: #F3FCFB;
}

.header{
  width: 100%;
  height: 520rpx;
  background: -webkit-linear-gradient(top, #BBE2F2,#F3FCFB);
}

.header-image-view{
  height: 90rpx;
  width: 90rpx;
  position: absolute;
  right: 0;
  margin-right: 32rpx;
}

.header-image{
  height: 100%;
  width: 100%;
  border-radius: 50%;
}

/* 天气 */
.weather-view{
  height: 148rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: -12rpx;
  background-color: #FFFFFF;
  border-radius: 18rpx;
  display: flex;
  flex-direction: row;
}

.weather-view-content{
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}

.weather-view-image{
  height: 74rpx;
  width: 74rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 园区收益 */
.earning-view{
  height: 180rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  display: flex;
  flex-direction: row;
}

.earning-view-item{
  width: 30%;
  height: 100%;
  border-radius: 12rpx;
  background-color: #FFFFFF;
}

.earning-view-item image{
  width:64rpx;
  height:64rpx;
  margin: 24rpx 12rpx 0rpx 12rpx;
}
.view-item-text-1{
  font-size: 24rpx;
  padding-left: 24rpx;
}
.view-item-text-2{
  font-size: 24rpx;
  font-weight: bolder;
  bottom: 0;
  padding-left:24rpx;
  padding-top: 6rpx;
}

/* 数据总览 */
.data-overview{
  height: 270rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  background-color: #FFFFFF;
  align-items: center;
}

.overview-capacity{
  height: 90%;
  width: 46%;
  margin-left: 2%;
  background-color: #EEF8F6;
  border-radius: 12rpx;
}

.overview-power-consume{
  height: 48%;
  width: 100%;
  background-color: #FFFDF8;
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.overview-power-create{
  height: 48%;
  width: 100%;
  margin-top: 4%;
  background-color: #F6F7FB;
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.power-image-view{
  width: 30%;
  align-items: center;
  display: flex;
  position: relative;
}
.power-image{
  height: 64rpx;
  width: 64rpx;
  right: 0;
  margin-right: 24rpx;
  position: absolute;
}