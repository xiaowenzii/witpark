page{width: 100%;background: -webkit-linear-gradient(top, #E8F7F4,#F7F7F7);}

.borad-view{display: flex;flex-direction: row;flex-wrap: wrap;background-color: #FFFFFF;margin: 24rpx;border-radius: 24rpx;}
.view-row-h70{width: 100%;height: 70rpx;padding-left: 12rpx;display: flex;flex-direction: row;align-items: center;}
.desc-view-text-title{font-size: 30rpx;font-weight: 600;}
.desc-view-text2{font-size: 30rpx;font-weight: bolder;margin-left: 6rpx;color: #18B6A2;}
.desc-view-text3{font-size: 24rpx;font-weight: bolder;width: 150rpx;}
.desc-view-unit{font-size: 20rpx;margin-left: 6rpx;color: #AFAFAF;}

.item-view{display: flex;flex-direction: row;margin-top: 36rpx;}
.item{width: 50%;display: flex;align-items: center;}
.item-image{height: 36rpx;width: 36rpx;}
