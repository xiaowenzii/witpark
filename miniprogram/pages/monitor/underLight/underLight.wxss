page{
  height: 100%;
  width: 100%;
  background: -webkit-linear-gradient(top, #E8F7F4,#F7F7F7);
}

.block-view{
  margin: 36rpx 24rpx 12rpx 24rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 18rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}
.desc-view{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.desc-view-text1{
  font-size: 24rpx;
}
.desc-view-text2{
  font-size: 32rpx;
  margin-top: 18rpx;
  font-weight: bolder;
}

.left-view{
  width: 55%;
  height: 180rpx;
  background-color: #F7FFFE;
  border-radius: 12rxp;
  display: flex;
  align-items: center;
}
.power-view-image{
  width: 96rpx;
  height: 96rpx;
  margin-left: 24rpx;
}

.right-view{
  width: 40%;
  height: 180rpx;
  margin-left: 5%;
  border-radius: 12rpx;
}
.right-view-top{
  height: 78rpx;
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  position: relative;
  align-items: center;
}
.right-view-bot{
  height: 78rpx;
  width: 100%;
  margin-top: 24rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  position: relative;
  align-items: center;
}

.power-view{height: 100rpx;width: 32%;border-radius: 12rpx;display: flex;flex-direction: row;align-items: center;border: 1px solid #E7E7E7;}
.power-view-image{width: 36rpx;height: 36rpx;margin-left: 6rpx;}