page{
  height: 100%;
  width: 100%;
  background: -webkit-linear-gradient(top, #E8F7F4,#F7F7F7);
}

.view-title{
  width: 100%;
  height: 64rpx;
  margin-top: 18rpx;
  display: flex;
  position: relative;
  flex-direction: row;
  align-items: center;
}
.select-view{
  border: 1rpx solid #19B6A3;
  border-radius: 9rpx;
  font-size: 24rpx;
  padding: 6rpx 9rpx 6rpx 18rpx;
  margin-left: 24rpx;
  display: flex;
  align-items: center;
  position: absolute;
  right: 0;
  margin-right: 24rpx;
}
.arrow-image{
  width: 32rpx;
  height: 24rpx;
  margin-top: 3rpx;
  margin-left: 18rpx;
}

.desc-view{
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/*  设备状态  */
.pro-view{
  height: 42rpx;
  width: 100%;
  text-align: center;
  color: #FFFFFF;
}

/* Dialog 样式 */
.condtion-dialog{
  width: 100%;
  background-color: #00000020;
  position: absolute;
  z-index: 10;
  top: 0;
  left: 0;
}