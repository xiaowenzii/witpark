page{width: 100%;background: -webkit-linear-gradient(top, #E8F7F4,#F7F7F7);}

.item-view{border: 1rpx solid #19B6A3;border-radius: 9rpx;font-size: 30rpx;padding: 6rpx 12rpx;margin-left: 24rpx;}
.view-title{width: 100%;height: 64rpx;margin-top: 18rpx;display: flex;position: relative;flex-direction: row;align-items: center;}

.select-view{border: 1rpx solid #19B6A3;border-radius: 9rpx;font-size: 30rpx;padding: 6rpx 9rpx 6rpx 18rpx;margin-left: 24rpx;display: flex;align-items: center;position: absolute;right: 0;margin-right: 24rpx;}
.arrow-image{width: 32rpx;height: 24rpx;margin-top: 3rpx;margin-left: 18rpx;}

.block-view{margin: 36rpx 24rpx 12rpx 24rpx;background-color: #FFFFFF;border-radius: 12rpx;padding: 18rpx;display: flex;flex-direction: row;flex-wrap: wrap;}
.power-view{height: 100rpx;width: 42%;margin-top: 24rpx;border-radius: 12rpx;display: flex;flex-direction: row;align-items: center;border: 1px solid #E7E7E7;padding-left: 24rpx;}
.power-view-image{width: 48rpx;height: 48rpx;margin-left: 12rpx;}

/* Dialog 样式 */
.condtion-dialog{width: 100%;background-color: #00000020;position: absolute;z-index: 10;top: 0;left: 0;}