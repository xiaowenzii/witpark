page{
  height: 100%;
  width: 100%;
  background: -webkit-linear-gradient(top, #E8F7F4,#F7F7F7);
}

/* 列表 */
.list{
  margin-left: 24rpx;
  margin-right: 24rpx;
  display: flex;
  flex-wrap: wrap;
}
.item{
  height: 180rpx;
  width: 48%;
  margin-top: 12rpx;
  margin-bottom: 12rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.item-title{
  font-size: 24rpx;
  padding: 24rpx 9rpx;
  font-weight: bolder;
}

.item-image{
  height: 36rpx;
  width: 36rpx;
  margin-left: 24rpx;
}