page{
  width: 100%;
  background: -webkit-linear-gradient(top, #E8F7F4,#F7F7F7);
}

.head-desc{
  width: 33%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: center;
}
.head-image{
  height: 24rpx;
  width: 30rpx;
  margin-top: 6rpx;
  margin-left: 24rpx;
}
.head-desc-text1{
  font-size: 24rpx;
  margin-left: 9rpx;
}

.enr-view{height: 240rpx;width: 100%;display: flex;flex-direction: row;flex-wrap: wrap;margin-top: 12rpx;align-items: center;justify-content: center;}
.enr-item-view{height: 45%;width: 48%;border-radius: 4px;display: flex;align-items: center;justify-content: center;background-color: #FFFFFF;}
.item-text-f36{font-size: 36rpx;font-weight: 600;}

.board-display{width: 100%;display: flex;flex-direction: row;flex-wrap: wrap;color: #4E5969;font-size: 12px;letter-spacing: 1px;}
.item-w18-h45{width: 48%;height: 45%;border-radius: 6px;margin-top: 15rpx;}
.line-view-h24{height: 24%;width: 100%;display: flex;align-items: center;margin-bottom: 15rpx;}
.image-24{width: 24rpx;height: 24rpx;margin-left: 6rpx;}
.line-view-h19{height: 19%;width: 100%;display: flex;align-items: center;background: #F6F7FF;border-radius: 6px;border: 2px solid #fff;position: relative;}
.title-text{color: #1D2129;font-size: 30rpx;margin-left: 6rpx;}
.left-6{margin-left: 6px;width: 90px;font-size: 14px;}
.left-value-24{color: #1D2129;font-size: 16px;position: absolute;right: 9px;font-weight: 600;}

/* Dialog 样式 */
.condtion-dialog{
  width: 100%;
  background-color: #00000020;
  position: absolute;
  z-index: 10;
  top: 0;
  left: 0;
}