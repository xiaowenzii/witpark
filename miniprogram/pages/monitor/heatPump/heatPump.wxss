page{
  height: 100%;
  width: 100%;
  background: -webkit-linear-gradient(top, #E8F7F4,#F7F7F7);
}
.desc-view{
  width: 33%;
  margin-top: 42rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.desc-view-text1{
  font-size: 36rpx;
  font-weight: bolder;
}
.desc-view-text2{
  font-size: 24rpx;
  margin-top: 18rpx;
}
.block-view{
  margin: 36rpx 24rpx 12rpx 24rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 18rpx;
}
.item-view{
  display: flex;
  flex-direction: row;
  margin-top: 36rpx;
}
.item{
  width: 50%;
  display: flex;
  align-items: center;
}
.item-image{
  height: 36rpx;
  width: 36rpx;
}
.item-text{
  font-size: 24rpx;
  margin-left: 12rpx;
  color: #A8A8A8;
}