/* 多选 */
.condtion-view {
  width: 100%;
  padding: 24rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.condtion-view-desc {
  width: 20%;
  height: 42rpx;
  display: flex;
  align-items: center;
  margin: 12rpx 0;
}

.condtion-view-item-area{
  width: 80%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  
}

.inner-item{
  width: 25%;
  display: flex;
}

.condtion-view-item{
  height: 42rpx;
  width: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  margin: 12rpx 0;
  border: 1rpx solid darkgray;
}

.confirm-button{
  height: 10%;
  display: flex;
  flex-direction: row;
  float: right;
  position:absolute;
  bottom: 0;
  right: 0;
  margin-right: 36rpx;
}

/* 单选 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.scroll-item{
  height: 72rpx;
  margin-left: 36rpx;
  margin-right: 48rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.item-checked{
  height: 32rpx;
  width: 32rpx;
  display: flex;
  position: absolute;
  right: 0;
}
.item-bottom-line{
  height: 1rpx;
  width: 100%;
  display: flex;
  position: absolute;
  bottom: 0;
  background-color: #FAFAFA;
}